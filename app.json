{
  "stack": "heroku-24",
  "addons": [
    "heroku-postgresql:mini"
  ],
  "environments": {
    "review": {
      "addons": [
        "heroku-postgresql:mini"
      ],
      "scripts": {
        "postdeploy": "bundle exec rails db:schema:load"
      },
      "env": {
        "RAILS_ENV": "review",
        "DISABLE_DATABASE_ENVIRONMENT_CHECK": "1"
      }
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "YARN_PRODUCTION": "true"
  }
}
